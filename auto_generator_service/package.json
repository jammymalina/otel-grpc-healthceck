{
  "name": "auto_generator_service",
  "version": "1.0.0",
  "description": "",
  "main": "handler.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "esbuild src/handler.ts --bundle --external:@aws-sdk/* --minify --sourcemap --platform=node --target=es2020 --outfile=dist/handler.js",
    "postbuild": "zip -r -j dist/handler.zip dist/handler.js*",
    "deploy": "npm run build && terraform init && terraform apply",
    "lint": "eslint --ext .ts src/"
  },
  "keywords": [],
  "author": "Jakub Jantosik",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "8.10.136",
    "@types/node": "20.12.3",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "esbuild": "0.20.2",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "prettier": "3.2.5"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "trailingComma": "es5",
    "semi": true
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "airbnb-typescript/base",
      "prettier"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "dependencies": {
    "@aws-sdk/client-codebuild": "3.545.0",
    "@octokit/rest": "20.0.2",
    "winston": "3.13.0"
  }
}
